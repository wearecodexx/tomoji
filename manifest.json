{
  "manifest_version": 2,

  "name": "Tomoji",
  "description": "With this extension you can easily add emojis and stickers to a textarea.",
  "version": "1.0.0",

  "icons": { "16": "img/icon_16.png",
           "48": "img/icon_48.png",
          "128": "img/icon_128.png"
        },
"browser_action": {
        "default_popup": "popup.html"
      }  ,

      "permissions": ["<all_urls>"],
      "web_accessible_resources": [
        "http://wearecodex.com/tomoji/*/*",
        "siroctopus/*",
        "img/*"
      ],

  "content_scripts": [
    {
      "matches": ["https://steemit.com/*"],
      "js": ["js/jquery.min.js", "js/tomoji.js"],
      "css":["styles/tomoji.css"],
      "run_at": "document_end"
    }
  ]
}
